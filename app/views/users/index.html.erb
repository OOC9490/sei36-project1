<h2>Viewing all users</h2>

<% if flash[:update].present? %>
    <h2><%= flash[:update] %></h2>
<% end %>

<table class="user_table">
    <tr>
        <th>User email</th>
        <th>Delete User</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
        <td><%= user.email %><%= " (You)" if user.id == @current_user.id %></td>
        <td><%= link_to "Delete", user_path(user.id) , :method => "delete", :data => { :confirm => "Are you sure?"} if user.id != @current_user.id %></td>
    </tr>
    <% end %>
</table>