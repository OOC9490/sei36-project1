<%= form_for @fighter do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true  %>
    <%= f.label :franchise %>
    <%= f.text_field :franchise %>
    <%= f.label :stock_symbol %>
    <%= f.url_field :stock_symbol, :placeholder => "Provide a link to your image..." %>
    <%= f.label :availability %>
    <%= f.text_field :availability %>
    <%= f.label :image %>
    <%= f.url_field :image, :placeholder => "Provide a link to your image..."  %>
    <%= f.label :game_id %>
    <%= f.select :game_ids, Game.pluck(:name, :id), :include_blank => true %>

    <%= f.submit %>
<% end %>