<%= form_for @fighter do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true  %>
    <%= f.label :franchise %>
    <%= f.text_field :franchise %>
    <%= f.label :stock_symbol %>
    <%= f.url_field :stock_symbol, :placeholder => "Provide a link to your image..." %>
    <%= f.label :availability %>
    <%= f.text_field :availability %>
    <%= f.label :image %>
    <%= f.url_field :image, :placeholder => "Provide a link to your image..."  %>
    <%= f.label :final_smash %>
    <%= f.url_field :final_smash, :placeholder => "Provide a link to your image..."  %>
    <%= f.label "Included in the Following Games:" %><br><br>
    <%= f.collection_check_boxes :game_ids, Game.all, :id, :name %>
    <br>
    <%= f.submit %>
<% end %>