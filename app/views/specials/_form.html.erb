<%= form_for @special do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true  %>
    <%= f.label :input_direction %>
    <%= f.text_field :input_direction, :placeholder => "Direction of the move..." %>
    <%= f.label :attack_type %>
    <%= f.text_field :attack_type %>
    <%= f.label :damage_dealt %>
    <%= f.text_field :damage_dealt %>
    <%= f.label :preview %>
    <%= f.url_field :preview, :placeholder => "Provide a link to your image..."  %>
    <%= f.label :fighter_id %>
    <%= f.select :fighter_id, Fighter.pluck(:name, :id), :include_blank => true %>

    <%= f.submit %>
<% end %>