<!DOCTYPE html>
<html>
  <head>
    <title>Smash Wiki</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag    '/assets/generic_styles.css' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="site_wrapper">
      <header>
        <nav class="user_verification">
          <% if @current_user.present? %>
            <%= link_to "Sign out #{@current_user.nickname.present? ? @current_user.nickname : @current_user.email}", login_path, :method => "delete"%>
          <% else %>
            <%= link_to "Sign up", new_user_path %>
            <%= link_to "Sign in", login_path %>
          <% end %>
        </nav>
        <% if @current_user.present? && @current_user.administrator %>
          <h1>Logged in as an Administrator</h1>
        <% end %>
        <div class="div_break"></div>
      </header>
      <div class="container">
        <nav class="main_nav">
          <ul>
            <li><%= link_to "Home", root_path, :class => "btn_hover" %></li>
            <li><%= link_to "Fighters", fighters_path, :class => "btn_hover" %></li>
            <li><%= link_to "Special Moves", specials_path, :class => "btn_hover" %></li>
            <li><%= link_to "Smash Games", games_path, :class => "btn_hover" %></li>
            <% if @current_user.present? %>
              <li><%= link_to "Add a Fighter", new_fighter_path, :class => "btn_hover" %></li>
              <li><%= link_to "Add a Special Move", new_special_path, :class => "btn_hover" %></li>
              <li><%= link_to "View your Profile", user_path(@current_user), :class => "btn_hover" %></li>
            <% end %>
            <% if @current_user.present? && @current_user.administrator %>
              <li><%= link_to "Manage users", users_path, :class => "btn_hover" %></li>
            <% end %>
          </ul>
        </nav>
        <main>
          <%= yield %>
        </main>
      </div>
    </div>
